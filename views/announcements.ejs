<!doctype html>

<head>
  <title>Eve Corporation Manager | Announcements</title>
  <%= include /partials/header.ejs %>
  <link rel="stylesheet" href="/css/admin.css" type="text/css">
</head>
<body>
  <%= include /partials/sidebar.ejs %>
  <div class="tab-content">
    <h3>Announcements [<%= corp.Announcements.length %>]</h3>
    <br>
    <% for(var i=0; i < corp.Announcements.length; i++) { %>
    <div class="well">
      <div class="post-header">
        <h4 class="charcoal"><%= corp.Announcements[i].Title %></h4>
        <h5><%= corp.Announcements[i].Time %></h5>
      </div>
      <div class="post-body"><div>
        <%= corp.Announcements[i].Body %>
        </div>
      </div>
      <div class="post-footer">
        <h5><%= corp.Announcements[i].Author %></h5>
        <h5><%= corp.Announcements[i]._id %></h5>
        <h5 class="controls">
        <% if (user.CharacterRoleLevel >= 4) { %>
          <a href="/deleteannouncement/<%= corp.Announcements[i]._id %>">Delete</a><% } %>
        </h5>
      </div>
    </div>
    <% } %>
</div>
</body>
<%= include /partials/footer.ejs %>

</html>