<!doctype html>

<head>
  <title>Eve Corporation Manager | Pings</title>
  <%= include /partials/header.ejs %>
  <link rel="stylesheet" href="/css/admin.css" type="text/css">
</head>
<body>
  <%= include /partials/sidebar.ejs %>
  <div class="tab-content">
    <h3>Pings [<%= corp.Pings.length %>]</h3>
    <br>
    <% for(var i=0; i < corp.Pings.length; i++) { %>
    <div class="well">
      <div class="post-header">
        <h4 class="charcoal"><%= corp.Pings[i].Title %></h4>
        <h5><%= corp.Pings[i].Time %></h5>
      </div>
      <div class="post-body"><div>
        <%= corp.Pings[i].Body %>
        </div>
      </div>
      <div class="post-footer">
        <h5><%= corp.Pings[i].Author %></h5>
        <h5><%= corp.Pings[i]._id %></h5>
        <h5 class="controls">
        <% if (user.CharacterRoleLevel >= 4) { %>
          <a href="/deleteannouncement/<%= corp.Pings[i]._id %>">Delete</a><% } %>
        </h5>
      </div>
    </div>
    <% } %>

                           <hr>
                           <h3>New Ping</h3>
                          <form method="post" action="/newping" name="ping-form" id="ping-form">
                    <div class="info extended"><div class="field">Title</div><input class="title" name="title" type="text" autocomplete="off" value="Some Title"></div>
                    <div class="info extended"><div class="field">Body</div><input class="body" name="body" type="text" autocomplete="off" value="Some Body"></div>
                    <input class="author" name="author" type="text" autocomplete="off" value="<%= user._id %>" hidden>
                    <br>
                    <button class="btn btn-danger update-submit button">Push New Ping</button>
                    </form>
</div>
</body>
<%= include /partials/footer.ejs %>

</html>